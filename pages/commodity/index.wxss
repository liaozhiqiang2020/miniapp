
.clear{
  clear: both;
  overflow: hidden;
}
navigator{
  display:inline;
}
.list{
  margin-top:10rpx;
}
 
.list .list_item{
  margin-top:10rpx;
  padding:10rpx;
  height:230rpx;
  border-bottom:1rpx solid #E8E8E8;
}
.list .list_item .img{
  float:left;
  width:40%;
  height:100%;
}
.list .list_item .img image{
   width:100%;
   height:100%;
}
 
.list .list_item .info{
  width:59%;
  float:right;
  height:230rpx;
  position:relative;
}
.list .list_item .info .title{
  color:#333;
  margin-left:10rpx;
  font-size: 35rpx;
}
 
.list .list_item .info .price{
  color:#FF2727;
  margin-left:10rpx;
  margin-top:10rpx;
  font-size:35rpx;
}

.list .list_item .info .remark{
  color:#747474;
  margin-left:10rpx;
  margin-top:20rpx;
  font-size:35rpx;
}
 
.list .list_item .info .num{
  position: absolute;
  left:0rpx;
  bottom:10rpx;
  color:#747474;
  margin-left:10rpx;
  font-size:35rpx;
}