.container{
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;
}
.userinfo {
	display: flex;
	flex-direction: column;
	padding: 50rpx 0;
	align-items: center;
	background: #e85654;
  width: 750rpx;
  background-color:#642B8D; 
}

.userinfo-avatar {
	width: 160rpx;
	height: 160rpx;
	margin: 20rpx;
	border-radius: 50%;
}

.userinfo-nickname {
  margin-top: 20rpx;
  color: #FFF;
}



.my-item{
    width: 100%;
    border-bottom: 1px solid #eee;
    height: 100rpx;
    line-height: 100rpx;
}



.table {
  border: 0px solid darkgray;
  width: 1600rpx;
 }
 .tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
 }
 .td {
  width:100%;
  justify-content: center;
  text-align: center;
 }
 .bg-w{
  background: snow;
 }
 .bg-g{
  background: #E6F3F9;
 }
 .th {
  width: 100%;
  justify-content: center;
  background: #642BBD;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
 }